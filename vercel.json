{
  "version": 2,
  "functions": {
    "api/*.js": {
      "runtime": "nodejs18.x" // Use a supported Node.js version
    }
  },
  "builds": [
    { "src": "public/**/*", "use": "@vercel/static" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
